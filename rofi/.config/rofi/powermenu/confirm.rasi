/* Confirm Dialog */

@import "styles/gruvbox.rasi"

* {
    background-color:       @background;
    text-color:             @foreground;
	font:				 	"JetBrains Mono 12";
}

window {
    width:      			225px;
    padding:    			25px;
    border:					2px;
    border-radius:          0px;
    border-color:           @border;
    location:               center;
    y-offset:               -2em;
}

entry {
    expand: 				true;
    text-color:				@border;
}
